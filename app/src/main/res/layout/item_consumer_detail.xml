<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/common_padding_bottom"
    android:paddingTop="@dimen/common_padding_top">


    <ImageView
        android:id="@+id/item_consumer_details_icon"
        android:layout_width="@dimen/contacts_fragment_child_icon_size"
        android:layout_height="@dimen/contacts_fragment_child_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginStart="@dimen/common_margin_left"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_padding_bottom"
        android:layout_marginStart="@dimen/common_padding_bottom"
        android:layout_toRightOf="@id/item_consumer_details_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_consumer_details_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/item_consumer_details_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_margin_right"
            android:layout_marginRight="@dimen/common_margin_right"
            android:layout_marginTop="@dimen/recharge_details_item_margin_top"
            android:maxLines="1"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>


    <TextView
        android:id="@+id/item_consumer_details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/common_margin_right"
        android:layout_marginRight="@dimen/common_margin_right"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/font_normal" />


</RelativeLayout>