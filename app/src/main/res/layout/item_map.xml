<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliwx_white"
   >

    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="@color/aliwx_color_gray_03"/>



 <TextView
     android:id="@+id/loc_name"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:textColor="@color/aliwx_black"
     android:textSize="18sp"
     android:text="山水教育集团幼儿园"
     android:paddingLeft="10dp"
     android:paddingTop="6dp"
     android:paddingBottom="4dp"
     />


<!--<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >-->

    <TextView
        android:id="@+id/loc_info"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/aliwx_black"
        android:textSize="16sp"
        android:text="56236"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        />

<View
    android:layout_height="0.5dp"
    android:layout_width="match_parent"
    android:background="@color/aliwx_color_gray_03"
    android:padding="3dp"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
      >


    <TextView
        android:id="@+id/info_detail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/aliwx_black"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:text="详情"
        android:gravity="center"
        android:paddingRight="10dp"
        android:layout_weight="1"
        />




    <TextView
        android:id="@+id/info_go"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textColor="@color/aliwx_black"
        android:textSize="16sp"
        android:text="去这里"
        android:paddingRight="10dp"
        android:layout_weight="1"
        />
</LinearLayout>


</LinearLayout>