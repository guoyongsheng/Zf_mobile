<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/profile_head_layout"
        android:layout_width="fill_parent"
        android:layout_height="250dp" >

        <ImageView
            android:id="@+id/profile_block_bg"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:background="@color/aliwx_white"
            android:contentDescription="@string/aliwx_app_name"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/profile_people_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/aliwx_app_name"
                android:scaleType="fitXY" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/profile_mask"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/aliwx_app_name"
            android:scaleType="fitXY"
            android:src="@drawable/aliwx_cover_avatar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/profile_user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/aliwx_common_text_color"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"
                android:text="@string/aliwx_profile_account" />

            <TextView
                android:id="@+id/profile_user_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:ellipsize="middle" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/remark_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/remark_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/aliwx_common_text_color"
                android:textSize="16sp"
                android:text="@string/aliwx_remark_name" />

            <TextView
                android:id="@+id/remark_name_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle" />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="5dp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:gravity="center"
        android:layout_marginBottom="@dimen/common_button_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/profile_btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_margin_left"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginRight="@dimen/common_margin_left"
            android:layout_marginStart="@dimen/common_margin_left"
            android:layout_weight="1"
            android:background="@drawable/aliwx_common_green_btn_bg"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:shadowColor="#bf07568b"
            android:shadowDx="0"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:text="@string/aliwx_add_friend"
            android:textColor="@color/aliwx_white"
            android:textSize="17sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/profile_btn_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginStart="@dimen/common_margin_left"
            android:layout_marginRight="@dimen/common_margin_left"
            android:layout_marginEnd="@dimen/common_margin_left"
            android:layout_weight="1"
            android:background="@drawable/aliwx_common_white_btn_bg"
            android:text="@string/aliwx_send_msg"
            android:textColor="@color/aliwx_black"
            android:shadowColor="#bf07568b"
            android:shadowDx="0"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textSize="17sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>