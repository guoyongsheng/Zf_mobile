<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_head" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tribe_set_parent"
        tools:ignore="GradleDependency">

        <TextView
            android:layout_width="wrap_content"
            tools:text="123123"
            style="@style/more_item_style"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/common_margin_left"
            android:layout_marginLeft="@dimen/common_padding_top"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="start"
            android:layout_marginRight="@dimen/common_padding_top"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            android:layout_marginStart="@dimen/common_padding_top"
            android:layout_marginEnd="@dimen/common_padding_top"
            android:id="@+id/tv_title" />

        <EditText
            android:hint="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_padding_top"
            android:layout_marginEnd="@dimen/common_padding_top"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintHorizontal_bias="0.0"
            android:maxLength="12"
            android:visibility="gone"
            android:maxLines="1"
            android:layout_marginTop="@dimen/common_padding_top"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:id="@+id/etContent" />

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/iv_zx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintVertical_bias="0.07"
            android:visibility="visible"
             />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp"
            android:layout_marginRight="@dimen/common_margin_left"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/common_margin_left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/common_button"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/aliwx_setting_bg_nor"
            android:textSize="@dimen/aliwx_common_text_size"
            android:layout_marginStart="@dimen/common_margin_left"
            android:layout_marginEnd="@dimen/common_margin_left" />

    </android.support.constraint.ConstraintLayout>



</LinearLayout>