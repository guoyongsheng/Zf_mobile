<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/common_padding_bottom"
    android:paddingTop="@dimen/common_padding_top">

    <View
        android:id="@+id/item_interest_circle_views"
        android:layout_width="@dimen/interest_circle_indicator_height"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/item_interest_circle_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_interest_circle_title" />

    <TextView
        android:id="@+id/item_interest_circle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_padding_bottom"
        android:layout_marginRight="@dimen/common_margin_right"
        android:gravity="center_vertical"
        android:text="@string/my_interest_circle"
        android:textSize="@dimen/font_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_interest_circle_views"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_interest_circle_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_padding_bottom"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_arrow"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_interest_circle_more"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingLeft="@dimen/common_padding_bottom"
        android:text="@string/more"
        android:textSize="@dimen/font_normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_interest_circle_arrow"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>