<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin_left"
    android:background="@color/aliwx_white"
    >

    <TextView
        android:id="@+id/integral_income_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_normal"
        android:textColor="@color/__picker_black_40"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/integral_income_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_normal"
        android:textColor="@color/__picker_black_40"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/integral_income_origin"
        android:layout_marginTop="@dimen/add_cloud_note_title_right"
        />

    <TextView
        android:id="@+id/integral_income_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_big"
        android:textColor="@color/orange"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>