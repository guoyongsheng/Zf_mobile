<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/choice_foodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="肉包子"
        android:textSize="16sp"
        android:paddingStart="20dp"
      android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:id="@+id/choice_foodprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/opreat_sum"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
      />


    <LinearLayout
        android:id="@+id/opreat_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:paddingEnd="20dp"
        android:layout_centerVertical="true"
        >
        <ImageView
        android:id="@+id/choice_remove"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_remove_circle_outline_blue_700_36dp"
        android:contentDescription="@null" />

        <TextView
            android:id="@+id/choice_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>


        <ImageView
            android:id="@+id/choice_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_add_circle_blue_700_36dp"
            android:contentDescription="@null" />


    </LinearLayout>

</RelativeLayout>