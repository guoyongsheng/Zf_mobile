<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/short_answer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_left"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_marginTop="@dimen/common_margin_left"
        android:background="@drawable/drawable_feed_back"
        android:gravity="left|top"
        android:hint="@string/please_input_title"
        android:minHeight="@dimen/feed_back_edit_min_height"
        android:padding="@dimen/common_padding_bottom"
        android:textSize="@dimen/font_normal" />

    <Button
        android:id="@+id/short_answer_ok"
        style="@style/common_style_relative"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_marginTop="@dimen/common_margin_left"
        android:background="@drawable/common_button"
        android:gravity="center"
        android:text="@string/Ok"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_normal" />

</LinearLayout>