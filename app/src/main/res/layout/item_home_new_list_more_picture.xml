<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_home_new_list_more_picture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_padding_bottom"
    android:paddingEnd="@dimen/common_margin_right"
    android:paddingStart="@dimen/common_margin_left"
    android:paddingTop="@dimen/common_padding_top"
    android:paddingRight="@dimen/common_margin_right"
    android:paddingLeft="@dimen/common_margin_left">

    <TextView
        android:id="@+id/item_home_new_list_more_picture_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="@dimen/font_normal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_new_list_item_margin_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_home_new_list_more_picture_ic_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_home_new_list_more_picture_ic_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_home_new_list_more_picture_ic_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_home_new_list_more_picture_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_new_list_item_margin_top"
        android:maxLines="1"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/font_small" />

</LinearLayout>