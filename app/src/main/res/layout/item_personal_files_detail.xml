<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/item_personal_files_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_left"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_margin_right"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_marginStart="@dimen/common_margin_left"
        android:background="@drawable/drawable_personal_files_details"
        android:orientation="vertical"
        android:padding="@dimen/common_margin_left">

        <TextView
            android:id="@+id/item_personal_files_detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_personal_files_detail_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small" />

    </LinearLayout>


    <View
        android:id="@+id/item_personal_files_detail_foot_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_view_width"
        android:layout_marginEnd="@dimen/common_margin_right"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_marginStart="@dimen/common_margin_left"
        android:background="@color/color_bg_gray2"
        android:visibility="gone" />


    <View
        android:id="@+id/item_personal_files_middle_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_left"
        android:visibility="gone" />


    <View
        android:id="@+id/item_personal_files_foot_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_left"
        android:visibility="gone" />


</LinearLayout>