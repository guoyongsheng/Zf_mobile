<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_home_new_list_one_picture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/common_padding_bottom"
    android:paddingEnd="@dimen/common_margin_right"
    android:paddingLeft="@dimen/common_margin_left"
    android:paddingRight="@dimen/common_margin_right"
    android:paddingStart="@dimen/common_margin_left"
    android:paddingTop="@dimen/common_padding_top">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/common_margin_top"
        android:layout_marginRight="@dimen/common_margin_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_home_new_list_one_picture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/item_home_new_list_one_picture_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/home_new_list_item_margin_top"
            android:maxLines="1"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_home_new_list_one_picture_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

</LinearLayout>