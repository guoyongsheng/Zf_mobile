<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loading_dialog_layout"
    >

    <ImageView
        android:id="@+id/loadingIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loading_dialog"
        android:contentDescription="@null"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/loadingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadingIv"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/font_big"
        android:textColor="@color/aliwx_white"
        android:layout_marginTop="@dimen/add_cloud_note_title_right"
        />

</RelativeLayout>