<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/poidetail_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/aliwx_color_blue"
        android:padding="5dp">

        <Button
            android:id="@+id/poidetail_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/commmon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:textColor="@color/aliwx_white"
            android:textSize="16sp" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/photo"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:background="@color/aliwx_white"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/poi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/aliwx_black"
        android:text="西西湿地"
        android:padding="10dp"
        android:background="@color/aliwx_white"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/aliwx_white"
        >

        <ImageView
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:background="@mipmap/map_mark"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/poi_address"
            android:layout_height="25dp"
            android:layout_width="match_parent"
            android:text="135165464"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />



    </LinearLayout>





</LinearLayout>