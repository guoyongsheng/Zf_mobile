<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/add_cloud_note_title_right"
        >

        <TextView
            android:id="@+id/no_data_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_data_hint"
            android:textSize="@dimen/font_normal"
            android:visibility="gone" />

        <include layout="@layout/common_refreshing_view" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/cloud_note_list_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/add_cloud_note_title_right"
        android:paddingBottom="@dimen/add_cloud_note_title_right"
        android:paddingRight="@dimen/inner_corner_length"
        android:paddingTop="@dimen/add_cloud_note_title_right">

        <ImageView
            android:id="@+id/insert_note_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/add_note" />

        <ImageView
            android:id="@+id/delete_note_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/delete_round"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>