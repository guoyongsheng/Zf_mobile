<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_float_action_button_size_min"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/common_padding_bottom"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_marginTop="@dimen/common_padding_bottom"
        android:background="@drawable/drawable_common_search_interest_circle"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_padding_bottom"
        android:paddingRight="@dimen/common_padding_top">

        <ImageView
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:layout_marginRight="@dimen/common_padding_bottom"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_search_grey_400_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/circle_search"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>

</LinearLayout>