<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lost_and_found"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/common_padding_bottom"
    android:paddingTop="@dimen/common_padding_top">

    <TextView
        android:id="@+id/lost_and_found_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/lost_and_found_name_margin_right"
        android:maxLines="1"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/lost_and_found_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lost_and_found_name"
        android:layout_below="@id/lost_and_found_name"
        android:layout_marginTop="@dimen/common_radius"
        android:maxLines="1"
        android:layout_marginRight="@dimen/lost_and_found_description_margin_right"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/lost_and_found_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/lost_and_found_name"
        android:layout_marginRight="@dimen/common_margin_right"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/lost_and_found_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/lost_and_found_description"
        android:layout_below="@id/lost_and_found_time"
        android:layout_marginRight="@dimen/common_margin_right"
        android:textSize="@dimen/font_small" />

</RelativeLayout>