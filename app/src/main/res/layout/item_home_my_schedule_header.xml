<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/common_padding_bottom"
    android:paddingTop="@dimen/common_padding_top">

    <ImageView
        android:id="@+id/item_home_my_schedule_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_favorite_red_400_24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item_home_my_schedule_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/my_schedule"
        android:textSize="@dimen/font_normal"
        app:layout_constraintBottom_toBottomOf="@id/item_home_my_schedule_iv"
        app:layout_constraintLeft_toRightOf="@id/item_home_my_schedule_iv"
        app:layout_constraintTop_toTopOf="@id/item_home_my_schedule_iv" />

    <ImageView
        android:id="@+id/item_home_my_schedule_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin_right"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_more_horiz_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/item_home_my_schedule_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_home_my_schedule_iv" />

</android.support.constraint.ConstraintLayout>