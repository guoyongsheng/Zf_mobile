<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliwx_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/iv_orderform"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#458545" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_orderform_eateryname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一食堂>"
                android:textColor="@color/__picker_black_40"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_orderform_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已接单"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_orderform_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_orderform_eateryname"
                android:padding="5dp"
                android:text="完成时间：2017-02-06"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_orderform_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_orderform_time"
                android:text="总价：25元"
                android:padding="5dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_orderform_onmore"
                android:layout_below="@id/tv_orderform_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="再来一单"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>


    </LinearLayout>








</LinearLayout>