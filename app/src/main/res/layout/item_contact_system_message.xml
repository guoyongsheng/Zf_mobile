<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/aliwx_common_safe_margin"
    android:background="@color/aliwx_color_white">


    <com.alibaba.mobileim.fundamental.widget.WXNetworkImageView
        android:id="@+id/head"
        android:layout_width="@dimen/aliwx_common_head_size"
        android:layout_height="@dimen/aliwx_common_head_size"
        android:src="@drawable/aliwx_tribe_head_default"
        android:layout_gravity="center_vertical" />

    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/aliwx_column_up_unit_margin"
        android:layout_marginStart="@dimen/aliwx_column_up_unit_margin">

        <TextView
            android:id="@+id/contact_title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/aliwx_black"
            android:textSize="@dimen/aliwx_font_second_grade"
            tools:text="名称名称名称名称名称名称名称名称名称名称名称名称名称名称名称名称名称" />

        <TextView
            android:id="@+id/invite_message"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textColor="@color/aliwx_black"
            android:ellipsize="end"
            android:textSize="@dimen/aliwx_font_third_grade"
            android:layout_below="@+id/contact_title"
            android:layout_marginTop="5dp"
            android:lines="1"
            tools:text="邀请信息邀请信息邀请信息邀请信息邀请信息邀请信息邀请信息邀请信息邀请信息" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_margin_top"
        android:layout_marginStart="@dimen/common_margin_top"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aliwx_common_blue_btn_bg"
            android:textColor="@color/aliwx_white"
            android:textSize="@dimen/aliwx_font_second_grade"
            tools:text="接受" />

        <TextView
            android:id="@+id/refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_top"
            android:layout_marginStart="@dimen/common_margin_top"
            android:background="@drawable/aliwx_common_blue_btn_bg"
            android:textColor="@color/aliwx_white"
            android:textSize="@dimen/aliwx_font_second_grade"
            tools:text="拒绝" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="已忽略"/>
    </LinearLayout>


</LinearLayout>