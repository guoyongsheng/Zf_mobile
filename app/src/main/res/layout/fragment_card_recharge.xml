<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_margin_left"
        android:paddingTop="@dimen/common_margin_left">

        <RelativeLayout style="@style/common_style_relative">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginStart="@dimen/common_margin_left"
                android:text="@string/school_name"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/card_recharge_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/common_margin_right"
                android:layout_marginRight="@dimen/common_margin_right" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/common_style_relative"
            android:layout_marginTop="@dimen/common_view_width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginStart="@dimen/common_margin_left"
                android:text="@string/name"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/card_recharge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/common_margin_right"
                android:layout_marginRight="@dimen/common_margin_right" />

        </RelativeLayout>


        <RelativeLayout
            style="@style/common_style_relative"
            android:layout_marginTop="@dimen/common_view_width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginStart="@dimen/common_margin_left"
                android:text="@string/card_number"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/card_recharge_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/common_margin_right"
                android:layout_marginRight="@dimen/common_margin_right" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_recharge_amount"
            style="@style/common_style_relative"
            android:layout_marginTop="@dimen/common_margin_left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginStart="@dimen/common_margin_left"
                android:text="@string/recharge_number"
                android:textSize="@dimen/font_normal" />

            <ImageView
                android:id="@+id/recharge_amount_arrow"
                style="@style/common_style_arrow"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/card_recharge_recharge_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/card_recharge_amount_margin_left"
                android:layout_marginStart="@dimen/card_recharge_amount_margin_left"
                android:layout_toLeftOf="@id/recharge_amount_arrow"
                android:layout_toStartOf="@id/recharge_amount_arrow"
                android:maxLines="1"
                android:text="@string/default_recharge_amount" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginStart="@dimen/common_margin_left"
            android:paddingBottom="@dimen/common_padding_bottom"
            android:paddingTop="@dimen/common_padding_top"
            android:text="@string/user_other_plat_pay"
            android:textSize="@dimen/font_normal" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingBottom="@dimen/common_padding_bottom"
            android:paddingTop="@dimen/common_padding_top">

            <ImageView
                android:id="@+id/card_recharge_icon_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginStart="@dimen/common_margin_left"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_icon_alipay" />

            <TextView
                android:id="@+id/card_recharge_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding_top"
                android:layout_marginStart="@dimen/common_padding_top"
                android:layout_marginTop="@dimen/common_radius"
                android:layout_toRightOf="@id/card_recharge_icon_alipay"
                android:text="@string/alipay"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/card_recharge_alipay"
                android:layout_alignStart="@id/card_recharge_alipay"
                android:layout_below="@id/card_recharge_alipay"
                android:layout_marginTop="@dimen/common_radius"
                android:text="@string/recommend_alipay_to_use"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/font_normal" />

        </RelativeLayout>

        <Button
            android:id="@+id/card_recharge_pay"
            style="@style/common_style_relative"
            android:layout_marginEnd="@dimen/common_margin_right"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginRight="@dimen/common_margin_right"
            android:layout_marginStart="@dimen/common_margin_left"
            android:layout_marginTop="@dimen/login_btn_margin_top"
            android:background="@drawable/common_button"
            android:text="@string/pay"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
