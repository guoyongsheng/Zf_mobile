<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/aliwx_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_select_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="@drawable/drawable_circle_"
        android:contentDescription="@null"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_weight="1"
        android:paddingEnd="10dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/purchaser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="张三"
            android:textColor="@color/aliwx_black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/purchaser_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/purchaser"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="紫霞街176号"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/purchaser_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:text="12345678932"
            android:textColor="@color/aliwx_black"
            android:textSize="16sp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/purchaser_address_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/aliwx_color_gray_03"
        android:visibility="visible"/>


</LinearLayout>