<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_fragment_mine_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_button_height"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/item_fragment_mine_icon"
        android:layout_width="@dimen/common_icon_size"
        android:layout_height="@dimen/common_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_fragment_mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_padding_bottom"
        android:layout_toRightOf="@id/item_fragment_mine_icon"
        android:textSize="@dimen/font_normal" />

    <ImageView
        style="@style/common_style_arrow"
        android:contentDescription="@string/app_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_divider_color"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/item_fragment_mine_icon"
        android:layout_marginLeft="@dimen/common_padding_bottom"
        />

</RelativeLayout>