<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_schedule_list_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/common_padding_bottom"
    android:paddingTop="@dimen/common_padding_top">

    <LinearLayout
        android:id="@+id/item_schedule_list_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_margin_left"
        android:paddingRight="@dimen/common_margin_right">

        <TextView
            android:id="@+id/item_schedule_list_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/item_schedule_list_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_radius"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_schedule_list_iv"
        android:layout_width="@dimen/mine_circle_image_view_margin_right"
        android:layout_height="@dimen/mine_circle_image_view_margin_right"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_schedule_list_ll"
        android:contentDescription="@string/app_name"
        android:src="@drawable/red_point" />

    <TextView
        android:id="@+id/item_schedule_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_toRightOf="@id/item_schedule_list_iv"
        android:maxLines="1"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/item_schedule_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_schedule_list_title"
        android:layout_below="@id/item_schedule_list_title"
        android:layout_marginTop="@dimen/common_radius"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/font_small" />


</RelativeLayout>