<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common_margin_left"
    android:paddingRight="@dimen/common_margin_left"
    android:paddingLeft="@dimen/common_margin_left"
    >

    <ImageView
        android:id="@+id/item_integral_goods_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/bg1"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/item_integral_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item_integral_goods_image"
        android:layout_marginTop="@dimen/common_radius"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/__picker_black_40"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/item_integral_goods_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_radius"
        >
        <ImageView
            android:id="@+id/item_integral_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/common_radius"
            android:src="@mipmap/points"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/item_integral_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/orange"
            android:layout_toRightOf="@+id/item_integral_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mine_icon_margin_end"
            />
    </RelativeLayout>

</RelativeLayout>