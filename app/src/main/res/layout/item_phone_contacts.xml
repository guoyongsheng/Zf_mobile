<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_phone_contacts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/common_padding_bottom"
    android:paddingTop="@dimen/common_margin_top">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_phone_contacts_icon"
        android:layout_width="@dimen/common_button_height"
        android:layout_height="@dimen/common_button_height"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginStart="@dimen/common_margin_left"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_phone_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_top"
        android:layout_marginStart="@dimen/common_margin_top"
        android:textSize="@dimen/font_normal" />

</LinearLayout>
