<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/common_margin_left"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/common_padding_bottom"
    android:paddingTop="@dimen/common_padding_top">

    <ImageView
        android:id="@+id/item_home_semester_week_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_favorite_red_400_24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item_home_semester_week_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/calendar"
        android:textSize="@dimen/font_normal"
        app:layout_constraintBottom_toBottomOf="@id/item_home_semester_week_iv"
        app:layout_constraintLeft_toRightOf="@id/item_home_semester_week_iv"
        app:layout_constraintTop_toTopOf="@id/item_home_semester_week_iv" />

    <ImageView
        android:id="@+id/item_home_semester_week_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin_right"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_more_horiz_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/item_home_semester_week_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_home_semester_week_iv" />

    <TextView
        android:id="@+id/item_home_semester_week_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_top"
        android:textSize="@dimen/font_normal"
        app:layout_constraintLeft_toLeftOf="@id/item_home_semester_week_iv"
        app:layout_constraintTop_toBottomOf="@id/item_home_semester_week_iv" />

    <TextView
        android:id="@+id/item_home_semester_week_lunar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin_right"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/font_small"
        app:layout_constraintBottom_toBottomOf="@id/item_home_semester_week_time"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/item_home_semester_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_bottom"
        android:textSize="@dimen/font_normal"
        app:layout_constraintLeft_toLeftOf="@id/item_home_semester_week_time"
        app:layout_constraintTop_toBottomOf="@id/item_home_semester_week_time" />

    <TextView
        android:id="@+id/item_home_semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin_right"
        android:text="@string/teaching_week"
        android:textSize="@dimen/font_normal"
        app:layout_constraintBottom_toBottomOf="@+id/item_home_semester_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_home_semester_number" />

    <TextView
        android:id="@+id/item_home_semester_number"
        android:layout_width="@dimen/common_icon_size"
        android:layout_height="@dimen/common_icon_size"
        android:background="@drawable/drawable_home_number_semester"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_normal"
        app:layout_constraintRight_toLeftOf="@id/item_home_semester"
        app:layout_constraintTop_toTopOf="@id/item_home_semester_week" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prefix_before_a_number"
        android:textSize="@dimen/font_normal"
        app:layout_constraintBottom_toBottomOf="@id/item_home_semester_number"
        app:layout_constraintRight_toLeftOf="@id/item_home_semester_number"
        app:layout_constraintTop_toTopOf="@id/item_home_semester_number" />


</android.support.constraint.ConstraintLayout>